<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="25dp"
        android:text="Isi Dulu Ini Bos.q!!!" />

    <EditText
        android:id="@+id/Input_Nama_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nama Anda"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Input_Email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email Anda"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Input_Telepon_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nomor Telepon Anda"
        android:inputType="phone" />

    <EditText
        android:id="@+id/Input_Password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password Anda"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Input_Button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Save" />


</LinearLayout>